<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginRight="3px"
        android:background="#FFFFFF"
        android:gravity="center|right"
        android:inputType="none"
        android:singleLine="true"
        android:textSize="13pt" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|right"
        android:textSize="15pt"
        android:background="#FFFFFF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.example.calculator.MyButton
                style="@style/Operators"
                android:id="@+id/pow"
                android:text="xⁿ"
            />
            <com.example.calculator.MyButton
                style="@style/Operators"
                android:id="@+id/sin"
                android:text="sin"
                />
            <com.example.calculator.MyButton
                style="@style/Operators"
                android:id="@+id/cos"
                android:text="cos"
                />
            <com.example.calculator.MyButton
                style="@style/Operators"
                android:id="@+id/tan"
                android:text="tan"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.example.calculator.MyButton
                style="@style/Operators"
                android:id="@+id/pi"
                android:text="π"
                />
            <com.example.calculator.MyButton
                style="@style/Operators"
                android:id="@+id/log"
                android:text="log"
                />
            <com.example.calculator.MyButton
                style="@style/Operators"
                android:id="@+id/percentage"
                android:text="%"
                />
            <com.example.calculator.MyButton
                style="@style/Operators"
                android:id="@+id/mod"
                android:text="mod"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.example.calculator.MyButton
                style="@style/Operators"
                android:id="@+id/dot"
                android:text="."
                />
            <Button
                style="@style/Operators"
                android:id="@+id/clear"
                android:text="C"
                />
            <Button
                style="@style/Operators"
                android:id="@+id/backspace"
                android:text="B"
                />
            <com.example.calculator.MyButton
                style="@style/Operators"
                android:id="@+id/divide"
                android:text="÷"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.example.calculator.MyButton
                style="@style/numbers"
                android:id="@+id/seven"
                android:text="7"
                />
            <com.example.calculator.MyButton
                style="@style/numbers"
                android:id="@+id/eight"
                android:text="8"
                />
            <com.example.calculator.MyButton
                style="@style/numbers"
                android:id="@+id/nine"
                android:text="9"
                />
            <com.example.calculator.MyButton
                style="@style/Operators"
                android:id="@+id/multiply"
                android:text="×"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.example.calculator.MyButton
                style="@style/numbers"
                android:id="@+id/four"
                android:text="4"
                />
            <com.example.calculator.MyButton
                style="@style/numbers"
                android:id="@+id/five"
                android:text="5"
                />
            <com.example.calculator.MyButton
                style="@style/numbers"
                android:id="@+id/six"
                android:text="6"
                />
            <com.example.calculator.MyButton
                style="@style/Operators"
                android:id="@+id/minus"
                android:text="-"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.example.calculator.MyButton
                style="@style/numbers"
                android:id="@+id/one"
                android:text="1"
                />
            <com.example.calculator.MyButton
                style="@style/numbers"
                android:id="@+id/two"
                android:text="2"
                />
            <com.example.calculator.MyButton
                style="@style/numbers"
                android:id="@+id/three"
                android:text="3"
                />
            <com.example.calculator.MyButton
                style="@style/Operators"
                android:id="@+id/plus"
                android:text="+"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.example.calculator.MyButton
                style="@style/Operators"
                android:id="@+id/left"
                android:text="("
                />
            <com.example.calculator.MyButton
               style="@style/numbers"
                android:id="@+id/zero"
                android:text="0"
                />
            <com.example.calculator.MyButton
                style="@style/Operators"
                android:id="@+id/right"
                android:text=")"
                />
            <Button
                style="@style/Operators"
                android:id="@+id/getResult"
                android:text="="
                />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>